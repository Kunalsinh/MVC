@model List<PracticeDatabase.Models.stud>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<div>@Html.ActionLink("Add Record", "AddRecord", null, new { @class = "btn btn-primary", @style = "float:right; padding:5px; margin-top:60px; margin-bottom:10px" })</div>

<!-- Form for searching by fname or lname -->
@using (Html.BeginForm("Search", "Student", FormMethod.Get))
{
    <div class="form-group">
        <div class="row">
            <div class="col-4">
                <input type="text" name="searchQuery" class="form-control" placeholder="Enter first or last name or city..." />
            </div>
            <div class="col-4">
                <input type="text" name="lnameSearchQuery" class="form-control" placeholder="Enter last name..." />
            </div>

            <div class="col-4">
                <input type="text" name="searchQ" class="form-control" placeholder="Enter search term..." />
            </div>

            <div class="">
                <!-- Radio buttons for search criteria -->
                <div class="col-6">
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="searchField" id="fname" value="fname" checked>
                        <label class="form-check-label" for="fname">First Name</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="searchField" id="lname" value="lname">
                        <label class="form-check-label" for="lname">Last Name</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="searchField" id="city" value="city">
                        <label class="form-check-label" for="city">City</label>
                    </div>
                </div>

                <div class="col-2">
                    <button type="submit" class="btn btn-primary">Search</button>
                </div>
            </div>
        </div>
    </div>
    
}

<!-- Form to submit selected records for deletion -->
@using (Html.BeginForm("DeleteSelected", "Student", FormMethod.Post))
{
    <table class="table table-striped">
        <tr>
            <th>Select</th> <!-- Column for checkboxes -->
            <th>FIRST NAME</th>
            <th>LAST NAME</th>
            <th>CITY</th>
            <th>DELETE</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <!-- Checkbox for selecting records -->
                <td>
                    <input type="checkbox" name="selectedIds" value="@item.Id" />
                </td>
                <td>@item.fname</td>
                <td>@item.lname</td>
                <td>@item.city</td>
                <td>
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { onclick = "return confirmDelete();" })
                </td>
            </tr>
        }
    </table>

    <!-- Button to delete selected records -->
    <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete selected records?');">Delete Selected</button>
}

<script type="text/javascript">
    function confirmDelete() {
        return confirm("Are you sure you want to delete this item?");
    }
</script>
